int main() 
    {
        int j = 5225, m, n;
        printf("The decimal %d is equal to binary - ", j);
        /* assume we have a function that prints a binary string when given 
           a decimal integer 
         */
        showbits(j);
 
        /* the loop for right shift operation */
        for ( m = 0; m <= 5; m++ ) {
            n = j >> m;
            printf("%d right shift %d gives ", j, m);
            showbits(n);
        }
        return 0;
    }